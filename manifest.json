{
  "manifest_version": 2,
  "name": "BrowserClearCache",
  "version": "1.0.0",
  "description": "浏览器缓存清理插件",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "ClearCache"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs",
    "chrome://net-internals/#dns",
    "chrome://extensions/"
  ],
  "web_accessible_resources": ["js/inject.js"]
}
